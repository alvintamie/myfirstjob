.row  
  .span8
    .hero-unit
      #login-section
        %h2 System Login
        = form_tag sessions_path, :class => "form form-inline" do
          .field
            = label_tag :email
            %br= text_field_tag :email, params[:email]
          .field
            = label_tag :password
            %br= password_field_tag :password, nil
          .field
            = check_box_tag :remember_me, 1, params[:remember_me]
            = label_tag :remember_me
          .actions
            = submit_tag "Login", :class => "btn btn-primary"
            %br
          #sign_up
            = link_to "Sign Up", "/signup"
          #forget_password
            = link_to "Forget password?", forget_password_profile_url
          .clearfix