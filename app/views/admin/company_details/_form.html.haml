= simple_form_for [:admin, @company_detail], :html => {:multipart => true} do |f|
  = render "shared/errors", :object => @company_detail
  = f.input :image
  = f.input :company_name
  = f.input :company_type, :collection => CompanyDetail::TYPES
  = f.input :company_industry, :collection => CompanyDetail::INDUSTRIES
  = f.input :address
  = f.input :number_of_employees, :collection => CompanyDetail::NUMBER_OF_EMPLOYEES
  = f.input :telephone
  = f.input :fax
  = f.input :contact_email
  = f.input :about
  <div class="company_hub_admin">
  = f.input :award
  </div>
  = f.input :opportunities
  <div class="company_hub_admin">
  = f.input :featured
  = f.input :featured_position, :collection => 1..10
  %br
  = f.button :submit, :class => "btn btn-primary"
  </div>

