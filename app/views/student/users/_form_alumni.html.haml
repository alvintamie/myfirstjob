= simple_form_for [:student, @student], :html => {:multipart => true} do |f|
  = render "shared/errors", :object => @user
  = image_tag @user.profile_image.url(:thumbnail) if @user.profile_image.present?
  = f.input :profile_image, :label => "Profile Picture (Best in Square Dimension)"
  = f.input :first_name
  = f.input :last_name
  = f.simple_fields_for :student do |m|
    = m.input :school
    = m.input :majors
    = m.input :nationality, :collection => Student::NATIONALITIES
  = f.input :email
  %br
  %br
  <div id="settingchange">
  = f.button :submit, :name => "alumni", :class => "btn btn-primary"
  </div>