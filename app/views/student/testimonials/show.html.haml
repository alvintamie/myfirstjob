.row
	.span8
		.hero-unit
			%h1 Testimonial Details
			.row
				.span1
					.position_testimonial_photo
						.testimonial_photo
							= image_tag @testimonial.profile_image
				.span7
					.span3
						.bold
							%p= @testimonial.student_name
						%p= @testimonial.company_detail.company_name
						%p= @testimonial.position
						%p= @testimonial.grade
					.span3
						.pull-right
							.inline
								<div class="popularity_shift">
								%p Popularity:
								%p{:id => "votes-"+@testimonial.id.to_s}= @testimonial.votes
								</div>
						%br
						%br
					.voting
						%td
						.upvote{:class => @upvoted ? :active : "", :tid => @testimonial.id }
							= link_to upvote_student_testimonial_path(@testimonial) do
								Upvote
								%i.icon-thumbs-up
						%td
						.downvote{:class => @downvoted ? :active : "", :tid => @testimonial.id }
							= link_to downvote_student_testimonial_path(@testimonial) do
								Downvote
								%i.icon-thumbs-down 
			.row
				%br
				- if @testimonial.contents["culture"].present?
					%h2 Culture
					%p= @testimonial.contents["culture"]
					%br
				- if @testimonial.contents["work_balance"].present?
					%h2 Work Balance
					%p= @testimonial.contents["work_balance"]
					%br
				- if @testimonial.contents["work_experience"].present?
					%h2 Work Experience
					%p= @testimonial.contents["work_experience"]
					%br
				- if @testimonial.contents["advice"].present?
					%h2 Advice
					%p= @testimonial.contents["advice"]
					%br
				- if @from_current_student
					.center
						=link_to "Edit", edit_student_testimonial_path(@testimonial, :company_detail_id => @testimonial.company_detail.id), :class => "btn btn-primary"
						=link_to "Delete", student_testimonial_path(@testimonial), :method => :delete,  data: { :confirm => "Are you sure?" }, :class => 'btn btn-danger'
				- if current_user.is_admin?
					= link_to "Delete", student_testimonial_path(@testimonial), :method => :delete, data: { :confirm => "Are you sure?" }, :class => 'btn btn-danger'
		.hero-unitcompany
			= simple_form_for @comment, :url => comment_student_testimonials_path(@comment), :method => 'post' do |f|
				= f.input :content, :label => "Comments"
				= f.input :testimonial_id, :as => :hidden, :input_html => { :value => @testimonial.id  }
				%br
				.center
					= f.button :submit, :class => "btn btn-primary"
			- @comments.each do |c|
				.herolist
				.row
					.span1
						<div class="photo100">
						= image_tag c.user.profile_image.url
						</div>
						.center
							= c.user.first_name
					.span6
						= c.content
	.span4
		.hero-unit
			%h1 Advanced Search
			<div id="searchbox">
			= render 'shared/search_box', :options =>  CompanyDetail::SEARCH_KEYS 
			</div>
