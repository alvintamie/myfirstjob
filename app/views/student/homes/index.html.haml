.row  
  .span8
    .row
      .hero-unit1
        %h1 Latest Testimonials 
        - @testimonials.each do |testimonial|
          .row  
            .span1
              <div class="photo100">
              = image_tag testimonial.profile_image
              </div>
            .span7
              %p= link_to testimonial.company_detail.company_name, company_detail_path(testimonial.company_detail)
              %p= "Industry : " + testimonial.company_detail.company_industry
              .shortellipsis
                %p= simple_format testimonial.contents["work_experience"]
              .pull-right
                %p= link_to "... Read More",  company_detail_path(testimonial.company_detail)
          .herolist
    .row
      .hero-unit1
        %h1 Featured Topics
        - @events.each do |event|
          .row  
            .span2
              <div class="photo150">
              = image_tag event.image.url(:thumbnail)
              = event.created_at.strftime("%d %b %Y") + " by " + event.author
              </div>
            .span6
              %p= link_to event.title, event_path(event)
              .ellipsis
                %p= event.content
              .pull-right
                %p= link_to "... Read More", event_path(event)
          .herolist
  .span4
    .row
      .hero-unit
        %h1 Contribute
        %p=link_to "Create a Company Profile", new_student_company_detail_path, :class => "btn btn-primary"
        %p=link_to "Manage your Company Profiles", student_company_details_path, :class => "btn btn-primary"
        %p=link_to "Write a Testimonial", new_student_testimonial_path, :class => "btn btn-primary"
        %p=link_to "Share an interview", new_student_interview_path, :class => "btn btn-primary"
    .row
      .hero-unit
        %h1 Personal
        %p=link_to "Edit Profile", edit_student_user_url(current_user), :class => "btn btn-primary"
    .row
      .hero-unit
        %h1 Membership
        %p Basic
        %p You are registered successfully!
