.row
	.span8
		.hero-unit1
			%h1 Event Details
			.row
				.span4
					<div class="photo300">
					%p= image_tag @event.image.url
					</div>
				.span3
					%h2= @event.title
					= @event.created_at.strftime("%d %b %Y") + " by " + @event.author
			.row
				%p= simple_format @event.content
				%br
				%br
				%p= link_to @event.label, @event.label_link
				.pull-right
					=link_to "See all events", events_path, :class =>"btn btn-primary"

