.hero-unit8
	%ul.breadcrumb.navigation
		%li
			= link_to root_path do
				%i.icon-folder-open
				Home
		%span.divider >
		%li
			= link_to events_path do 
				Stories
		%span.divider >
		%li.gray
			= @event.title
%br
%br
.span8
	.event_container
		%h1= @event.title
		.green
			%p= @event.created_at.strftime("%d %b %Y") + " by " + @event.author
		.span4.pull-right
			.article_image
				= image_tag @event.image.url
		%p= simple_format @event.content
		%br
		.italic
			%p= link_to @event.label, @event.label_link
		%br
.span4
	.hero-unit4
		%h1 Top Stories
		- @featuredevents.each do |event|
			.space
			%p= link_to event.title, event_path(event)


