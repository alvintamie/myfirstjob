.hero-unit8
  %ul.breadcrumb.navigation
    %li
      = link_to root_path do
        %i.icon-folder-open
        Home
    %span.divider >
    %li.gray
      Change Password
%br
%br
.login_box
	%h1 Change your password

	%p Leave your <strong>Password</strong> and <strong>Confirmed Password</strong> blank if you don't want to change your current password.

	#border-enclosed.short-input
		= form_for :user, :url => profile_url, :method => :put, :html => {:class => "form form-inline"} do |f|
			= render "shared/errors", :object => @user, :message => "Your profile cannot be saved due to the following reasons"
			.field
				= f.label :password
				%br= f.password_field :password
			.field
				= f.label :password_confirmation, "Confirmed Password"
				%br= f.password_field :password_confirmation
			
			.actions
				= f.submit "Update", :class => "btn"