.hero-unit3
  .pheading
    Dear Current Students,
  %br
  %h1 Welcome to MyFirstJob!
  %h2 Registration is quick and does not cost a dime!
  <div class="signupform">
  = simple_form_for @user do |f|
    = render "shared/errors", :object => @user
    = f.input :first_name
    = f.input :last_name
    = f.simple_fields_for :student do |m|
      = m.input :school, :collection => Student::SCHOOLS
      = m.input :graduation_year
    = f.input :email, label: 'School Email'
    = f.input :password
    = f.input :password_confirmation
    %br
    .psmall
      By registering, you accept our Terms.
    %br
    %br
    .signupbutton
      = f.button :submit, :name => "student", :class => "btn btn-primary"
  </div>