.row  
  .span8
    .hero-unit1
      %h1 Latest Company Reviews
      - @testimonials.each do |testimonial|
        .row  
          .span1
            <div class="photo100">
            = image_tag testimonial.profile_image
            </div>
          .span7
            %p= link_to testimonial.company_detail.company_name, company_detail_path(testimonial.company_detail)
            .green
              %p= "Industry : " + testimonial.company_detail.company_industry
            .space
            .shortellipsis
              %p= simple_format testimonial.contents["work_experience"]
            .space
            .pull-right
              %p= link_to "... Read More",  company_detail_path(testimonial.company_detail)
        .herolist
    .hero-unit1
      %h1 Latest Interviews
      - @interviews.each do |interview|
        .row  
          .span1
            <div class="photo100">
            = image_tag interview.profile_image
            </div>
          .span7
            %p= link_to interview.company_detail.company_name, company_detail_path(interview.company_detail)
            .green
              %p= "Industry : " + interview.company_detail.company_industry
            .space
            .shortellipsis
              %p= simple_format interview.contents["interview_process"]
            .space
            .pull-right
              %p= link_to "... Read More",  company_detail_path(interview.company_detail)
        .herolist
    .hero-unit1
      %h1 Featured Stories
      - @events.each do |event|
        .row
          .span2
            <div class="photo150">
            = image_tag event.image.url(:thumbnail)
            </div>
          .span6
            %p= link_to event.title, event_path(event)
            .green
              %p= event.created_at.strftime("%d %b %Y") + " by " + event.author
            .space
            .ellipsis
              %p= event.content
            .space
            .pull-right
              %p= link_to "... Read More", event_path(event)
        .herolist
  .span4
    .hero-unit
      %h1 Job / Internship Seeker
      .space
      %p See all the company reviews and interviews by signing up with us! Registration is Free!
      .space
      .bigbutton
        %p=link_to "Get Started", new_user_path(:type => "student"), :class => "btn btn-primary"
    .hero-unit
      %h1 Employer
      .space
      %p Reach out to students and graduates effectively now through events, posts and referrals.
      .space
      .bigbutton
        %p=link_to "Find Out More", employers_path, :class => "btn btn-primary"
    .hero-unit
      %h1 Stories Listing
      - @events.each do |event|
        .space
        %p= link_to event.title, event_path(event)
    .row
