.hero-unit8
	%ul.breadcrumb.navigation
		%li
			= link_to root_path do
				%i.icon-folder-open
				Home
		%span.divider >
		%li.gray
			Jobs & Internships
%br
%br
= render 'shared/search_job'

%p= "Total Results "+@total_results.to_s
%p= "Page Number "+@page_number.to_s
%p= "Total Pages "+@total_pages.to_s
%p= "Showing results #{@page_number*10 - 9} to #{@page_number*10 > @total_results ? @total_results.to_s : (@page_number*10).to_s} to of #{@total_results.to_s}"
%br
%p=link_to "<-", params.merge(:page => @page_number-1) if @page_number-1 > 0
- 1.upto(@total_pages) do |i|
	%p=link_to i, params.merge(:page => i)
%p=link_to "->", params.merge(:page => @page_number+1) if @page_number < @total_pages


- @results.each do |job|
	%h3= link_to job["jobtitle"], job["url"], :onmousedown => "indeed_clk(this, '6931');",:target => "_blank"
	%p= job["company"]
	%p= job["source"]
	%p= job["date"].split(" ")[1..3].join(" ")
	= raw(job["snippet"])
	.span4
		.hero-unit4
			%h1 Articles
